{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport Footer from \"@/components/Footer.vue\";\nimport BlogList from \"@/components/BlogList.vue\";\nexport default {\n  name: \"Home\",\n  components: {\n    Footer,\n    BlogList\n  },\n  data() {\n    return {\n      current: '全部竞赛',\n      //当前选择的分类名称，默认为全部\n      categoryList: [],\n      topList: [],\n      //排行榜数据\n      showList: [],\n      //展示的topList\n      lastNum: 0,\n      activityList: [],\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      carouselOffset: 0,\n      carouselTimer: null\n    };\n  },\n  mounted() {\n    this.load();\n    this.refreshTop();\n    this.loadActivity();\n    this.startCarousel();\n  },\n  beforeDestroy() {\n    clearInterval(this.carouselTimer);\n  },\n  methods: {\n    loadActivity() {\n      this.$request.get(\"/activity/selectActivityTop\").then(res => {\n        this.activityList = res.data || [];\n        this.activityList = this.activityList.slice(0, 1);\n      });\n    },\n    refreshTop() {\n      this.$request.get(\"/blog/selectBlogTop\").then(res => {\n        this.topList = res.data || [];\n        //给topList的每个元素添加序号\n        for (let i = 0; i < this.topList.length; i++) {\n          this.topList[i].index = i + 1;\n        }\n        //如果已经到了最后一页，就从第一页开始展示\n        if (this.lastNum === 20) {\n          this.lastNum = 0;\n        }\n        //展示前5个\n        this.showList = this.topList.slice(this.lastNum, this.lastNum + 1);\n        //展示下一页5个\n        this.lastNum += 1;\n      });\n    },\n    selectCategory(categoryName) {\n      this.current = categoryName;\n    },\n    load() {\n      //请求分类数据\n      this.$request.get('/category/selectAll').then(res => {\n        this.categoryList = res.data || [];\n        this.categoryList.unshift({\n          name: '全部竞赛'\n        });\n      });\n    },\n    goToApply() {\n      this.$router.push('/front/Certification');\n    },\n    addBlog() {\n      window.open('/front/NewBlog');\n    },\n    startCarousel() {\n      this.carouselTimer = setInterval(() => {\n        this.carouselOffset -= 700; // Assuming each item is 260px wide\n        if (this.carouselOffset <= -2000) {\n          // Assuming there are 5 items\n          this.carouselOffset = 0;\n        }\n      }, 3000);\n    }\n  }\n};","map":{"version":3,"names":["Footer","BlogList","name","components","data","current","categoryList","topList","showList","lastNum","activityList","user","JSON","parse","localStorage","getItem","carouselOffset","carouselTimer","mounted","load","refreshTop","loadActivity","startCarousel","beforeDestroy","clearInterval","methods","$request","get","then","res","slice","i","length","index","selectCategory","categoryName","unshift","goToApply","$router","push","addBlog","window","open","setInterval"],"sources":["src/views/front/Home.vue"],"sourcesContent":["<template>\r\n  <div class=\"main-content\">\r\n    <div style=\"display: flex; align-items: flex-start; grid-gap: 10px\">\r\n      <!--左边分类部分-->\r\n      <div style=\"width: 150px;\" class=\"card\">\r\n        <div class=\"category-item\" :class=\"{ 'category-item-active': item.name === current }\"\r\n          v-for=\"item in categoryList\" :key=\"item.id\" @click=\"selectCategory(item.name)\">{{ item.name }}\r\n        </div>\r\n      </div>\r\n      <!--中间正文部分-->\r\n      <div class=\"main-column\" style=\"flex: 1\">\r\n        <!--竞赛走马灯-->\r\n        <div class=\"card competion-carousel\" style=\"margin-bottom: 10px;\">\r\n          <div class=\"carousel-content\" :style=\"{ transform: 'translateX(' + carouselOffset + 'px)' }\">\r\n            <div v-for=\"(item, index) in activityList\" :key=\"item.id\" class=\"carousel-item\">\r\n              <a :href=\"'/front/activityDetail?activityId=' + item.id\">\r\n                <img :src=\"item.cover\" style=\"width: 80%; border-radius: 5px\" alt=\"\">\r\n              </a>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        <!--博客列表-->\r\n        <div class=\"card\" style=\"flex: 1\">\r\n          <el-button type=\"primary\" @click=\"addBlog\" v-if=\"user.isCreator\" style=\"margin-bottom: 10px;\">发表新帖子</el-button>\r\n          <el-button type=\"warning\" @click=\"goToApply\" v-if=\"!user.isCreator\" style=\"margin-bottom: 10px;\"\r\n            justify=\"end\">点此认证后使用发帖功能</el-button>\r\n          <BlogList :categoryName=\"current\"></BlogList>\r\n          <Footer></Footer>\r\n        </div>\r\n      </div>\r\n      <!--右边竞赛、广告、排行榜展示部分-->\r\n      <div style=\"width: 260px\">\r\n        <!--欢迎语-->\r\n        <div class=\"card\" style=\"margin-bottom: 10px;\">\r\n          <div style=\"font-size: 20px; font-weight: bold; margin-bottom: 10px\">欢迎您！</div>\r\n          <div style=\"color: #666\">记录美好的一天！</div>\r\n        </div>\r\n        <!--排行榜-->\r\n        <div class=\"card\" style=\"margin-bottom: 10px;\">\r\n          <div style=\"display: flex; padding-bottom: 10px; border-bottom: 1px solid #ddd\">\r\n            <div style=\"font-size: 20px; flex: 1\">排行榜</div>\r\n            <div style=\"font-size: 12px; color: #666;\" @click=\"refreshTop\"><i class=\"el-icon-refresh\"></i>换一换</div>\r\n          </div>\r\n          <div>\r\n            <div v-for=\"item in showList\" :key=\"item.id\" style=\"margin: 10px 0\" class=\"line1\">\r\n              <a :href=\"'/front/blogDetail?blogId=' + item.id\" target=\"_blank\">\r\n                <span style=\"display: inline-block; margin-right: 10px; text-align: right; width: 20px\">\r\n                  <span style=\"color: orangered\" v-if=\"item.index === 1\">{{ item.index }}</span>\r\n                  <span style=\"color: goldenrod\" v-else-if=\"item.index === 2\">{{ item.index }}</span>\r\n                  <span style=\"color: #409EFF\" v-else-if=\"item.index === 3\">{{ item.index }}</span>\r\n                  <span style=\"color: #666\" v-else>{{ item.index }}</span>\r\n                </span>\r\n                <span style=\"color: #666\">{{ item.title }}</span>\r\n              </a>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport Footer from \"@/components/Footer.vue\";\r\nimport BlogList from \"@/components/BlogList.vue\";\r\n\r\nexport default {\r\n  name: \"Home\",\r\n  components: {\r\n    Footer,\r\n    BlogList\r\n  },\r\n  data() {\r\n    return {\r\n      current: '全部竞赛',  //当前选择的分类名称，默认为全部\r\n      categoryList: [],\r\n      topList: [],  //排行榜数据\r\n      showList: [],   //展示的topList\r\n      lastNum: 0,\r\n      activityList: [],\r\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\r\n      carouselOffset: 0,\r\n      carouselTimer: null\r\n    }\r\n  },\r\n  mounted() {\r\n    this.load()\r\n    this.refreshTop()\r\n    this.loadActivity()\r\n    this.startCarousel()\r\n  },\r\n  beforeDestroy() {\r\n    clearInterval(this.carouselTimer)\r\n  },\r\n  methods: {\r\n    loadActivity() {\r\n      this.$request.get(\"/activity/selectActivityTop\").then(res => {\r\n        this.activityList = res.data || []\r\n        this.activityList = this.activityList.slice(0, 1)\r\n      })\r\n    },\r\n    refreshTop() {\r\n      this.$request.get(\"/blog/selectBlogTop\").then(res => {\r\n        this.topList = res.data || []\r\n        //给topList的每个元素添加序号\r\n        for (let i = 0; i < this.topList.length; i++) {\r\n          this.topList[i].index = i + 1\r\n        }\r\n        //如果已经到了最后一页，就从第一页开始展示\r\n        if (this.lastNum === 20) {\r\n          this.lastNum = 0\r\n        }\r\n        //展示前5个\r\n        this.showList = this.topList.slice(this.lastNum, this.lastNum + 1)\r\n        //展示下一页5个\r\n        this.lastNum += 1\r\n      })\r\n    },\r\n    selectCategory(categoryName) {\r\n      this.current = categoryName\r\n    },\r\n    load() {\r\n      //请求分类数据\r\n      this.$request.get('/category/selectAll').then(res => {\r\n        this.categoryList = res.data || []\r\n        this.categoryList.unshift({ name: '全部竞赛' })\r\n      })\r\n    },\r\n    goToApply() {\r\n      this.$router.push('/front/Certification')\r\n    },\r\n    addBlog() {\r\n      window.open('/front/NewBlog')\r\n    },\r\n    startCarousel() {\r\n      this.carouselTimer = setInterval(() => {\r\n        this.carouselOffset -= 700;  // Assuming each item is 260px wide\r\n        if (this.carouselOffset <= -2000) {  // Assuming there are 5 items\r\n          this.carouselOffset = 0;\r\n        }\r\n      }, 3000);\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n.category-item {\r\n  text-align: center;\r\n  width: 100px;\r\n  height: 50px;\r\n  padding: 10px;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n}\r\n\r\n.category-item-active {\r\n  background-color: #1890ff;\r\n  color: #fff;\r\n  border-radius: 5px;\r\n}\r\n\r\n.line1 {\r\n  white-space: nowrap;\r\n  overflow: hidden;\r\n  text-overflow: ellipsis;\r\n}\r\n\r\na {\r\n  color: #333333;\r\n}\r\n\r\n.competion-carousel {\r\n  position: relative;\r\n  width: 100%;\r\n  overflow: hidden;\r\n}\r\n\r\n.carousel-content {\r\n  display: flex;\r\n  transition: transform 0.5s ease-in-out;\r\n}\r\n\r\n.carousel-item {\r\n  min-width: 260px;\r\n  margin-right: 10px;\r\n}\r\n</style>\r\n"],"mappings":";AA+DA,OAAAA,MAAA;AACA,OAAAC,QAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IACAH,MAAA;IACAC;EACA;EACAG,KAAA;IACA;MACAC,OAAA;MAAA;MACAC,YAAA;MACAC,OAAA;MAAA;MACAC,QAAA;MAAA;MACAC,OAAA;MACAC,YAAA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAC,cAAA;MACAC,aAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;IACA,KAAAC,UAAA;IACA,KAAAC,YAAA;IACA,KAAAC,aAAA;EACA;EACAC,cAAA;IACAC,aAAA,MAAAP,aAAA;EACA;EACAQ,OAAA;IACAJ,aAAA;MACA,KAAAK,QAAA,CAAAC,GAAA,gCAAAC,IAAA,CAAAC,GAAA;QACA,KAAAnB,YAAA,GAAAmB,GAAA,CAAAzB,IAAA;QACA,KAAAM,YAAA,QAAAA,YAAA,CAAAoB,KAAA;MACA;IACA;IACAV,WAAA;MACA,KAAAM,QAAA,CAAAC,GAAA,wBAAAC,IAAA,CAAAC,GAAA;QACA,KAAAtB,OAAA,GAAAsB,GAAA,CAAAzB,IAAA;QACA;QACA,SAAA2B,CAAA,MAAAA,CAAA,QAAAxB,OAAA,CAAAyB,MAAA,EAAAD,CAAA;UACA,KAAAxB,OAAA,CAAAwB,CAAA,EAAAE,KAAA,G