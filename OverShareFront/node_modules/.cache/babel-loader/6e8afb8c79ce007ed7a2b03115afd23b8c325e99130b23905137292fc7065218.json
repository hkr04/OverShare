{"ast":null,"code":"import Comment from \"@/components/Comment.vue\";\nexport default {\n  name: \"ActivityDetail\",\n  data() {\n    return {\n      activity: {},\n      activityId: this.$route.query.activityId,\n      sighText: '已报名',\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}')\n    };\n  },\n  components: {\n    Comment\n  },\n  created() {\n    this.load();\n    //更新阅读量\n    this.$request.put('/activity/updateCount/' + this.activityId);\n  },\n  methods: {\n    cancel() {\n      // 取消报名\n      this.$confirm('您确定取消报名吗？', '确认取消', {\n        type: \"warning\"\n      }).then(response => {\n        this.$request.delete('/activitySign/delete/user/' + this.activityId + '/' + this.user.id).then(res => {\n          if (res.code === '200') {\n            // 表示操作成功\n            this.$message.success('操作成功');\n            this.load();\n          } else {\n            this.$message.error(res.msg); // 弹出错误的信息\n          }\n        });\n      }).catch(() => {});\n    },\n    handleLike() {\n      this.$request.post(\"/likes/set\", {\n        fid: this.activityId,\n        module: \"竞赛\"\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"操作成功\");\n          this.load();\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleCollect() {\n      this.$request.post(\"/collect/set/collect\", {\n        fid: this.activityId,\n        module: \"竞赛\"\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"操作成功\");\n          this.load();\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    sign() {\n      this.$request.post(\"/activitySign/add\", {\n        activityId: this.activityId\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"报名成功\");\n          this.load();\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    load() {\n      this.$request.get('/activity/selectById/' + this.activityId).then(res => {\n        this.activity = res.data || {};\n      });\n    }\n  }\n};","map":{"version":3,"names":["Comment","name","data","activity","activityId","$route","query","sighText","user","JSON","parse","localStorage","getItem","components","created","load","$request","put","methods","cancel","$confirm","type","then","response","delete","id","res","code","$message","success","error","msg","catch","handleLike","post","fid","module","handleCollect","sign","get"],"sources":["src/views/front/ActivityDetail.vue"],"sourcesContent":["<template>\r\n  <div class=\"main-content\">\r\n    <div class=\"card\" style=\"margin-bottom: 10px\">\r\n      <div style=\"display: flex; grid-gap: 20px\">\r\n        <img :src=\"activity.cover\" style=\"width: 30%; border-radius: 5px; height: 200px\" alt=\"\">\r\n        <div style=\"flex: 1\">\r\n          <div style=\"font-weight: bold;font-size: 24px;margin-bottom: 20px\">{{ activity.name }}</div>\r\n          <div style=\"color: #666666; font-size: 13px; line-height: 22px;text-align: justify;margin-bottom: 20px\">\r\n            {{ activity.descr }}\r\n          </div>\r\n          <div style=\"color: #666666;margin-bottom: 10px\">\r\n            <i class=\"el-icon-date\" style=\"margin-right: 5px\"></i>\r\n            <span style=\"margin-right: 5px\">时间</span>\r\n            <span>{{ activity.start }} - {{ activity.end }}</span>\r\n          </div>\r\n          <div style=\"margin-bottom: 10px; color: #666666\">\r\n            <i class=\"el-icon-location-outline\" style=\"margin-right: 5px\"></i>\r\n            <span style=\"margin-right: 5px\">地址</span>\r\n            <span v-if=\"activity.form === '线上'\">\r\n              <a style=\"color: #409EFF\" :href=\"activity.address\" target=\"_blank\">{{ activity.address }}</a>\r\n              <el-tag size=\"mini\" style=\"margin-left: 10px\">{{ activity.form }}</el-tag>\r\n            </span>\r\n            <span v-if=\"activity.form === '线下'\">\r\n              {{ activity.address }}\r\n              <el-tag size=\"mini\" style=\"margin-left: 10px\">{{ activity.form }}</el-tag>\r\n            </span>\r\n          </div>\r\n          <div style=\"display: flex\">\r\n            <el-button type=\"primary\" disabled v-if=\"activity.isApplyEnd\" key=\"报名已结束\">报名已结束</el-button>\r\n<!--            <el-button type=\"primary\" disabled v-else-if=\"!activity.isApplyStart\" key=\"报名未开始\">报名未开始</el-button>-->\r\n            <el-button type=\"success\" v-else-if=\"activity.isSign\" :key=\"sighText\" @click=\"cancel\"\r\n                       @mouseenter.native=\"sighText='取消报名'\" @mouseleave.native=\"sighText='已报名'\">\r\n              {{ sighText }}\r\n            </el-button>\r\n            <el-button type=\"primary\" v-else key=\"报 名\" @click=\"sign\">报 名</el-button>\r\n            <div style=\"flex: 1;text-align: right\">\r\n              <el-button type=\"danger\" @click=\"handleLike\" v-if=\"activity.isLike\">已点赞 {{\r\n                  activity.likeCount\r\n                }}\r\n              </el-button>\r\n              <el-button type=\"danger\" @click=\"handleLike\" v-else>点赞 {{ activity.likeCount }}</el-button>\r\n              <el-button type=\"warning\" @click=\"handleCollect\" v-if=\"activity.isCollect\">已收藏 {{\r\n                  activity.collectCount\r\n                }}\r\n              </el-button>\r\n              <el-button type=\"warning\" @click=\"handleCollect\" v-else>收藏 {{ activity.collectCount }}</el-button>\r\n              <el-button type=\"primary\">阅读量 {{ activity.readCount }}</el-button>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <!--竞赛详情-->\r\n    <div class=\"card\" style=\"margin-bottom: 10px\">\r\n      <div\r\n          style=\"font-weight: bold; font-size: 24px;margin-bottom: 20px;padding-left: 10px;border-left: 5px solid #409EFF\">\r\n        竞赛详情\r\n      </div>\r\n      <div class=\"w-e-text\">\r\n        <div v-html=\"activity.content\"></div>\r\n      </div>\r\n    </div>\r\n    <!--评论-->\r\n    <div>\r\n      <Comment :fid=\"activityId\" module=\"竞赛\"/>\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>\r\nimport Comment from \"@/components/Comment.vue\";\r\n\r\nexport default {\r\n  name: \"ActivityDetail\",\r\n  data() {\r\n    return {\r\n      activity: {},\r\n      activityId: this.$route.query.activityId,\r\n      sighText: '已报名',\r\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\r\n    }\r\n  },\r\n  components: {\r\n    Comment\r\n  },\r\n  created() {\r\n    this.load()\r\n    //更新阅读量\r\n    this.$request.put('/activity/updateCount/' + this.activityId)\r\n  },\r\n\r\n  methods: {\r\n    cancel() {   // 取消报名\r\n      this.$confirm('您确定取消报名吗？', '确认取消', {type: \"warning\"}).then(response => {\r\n        this.$request.delete('/activitySign/delete/user/' + this.activityId + '/' + this.user.id).then(res => {\r\n          if (res.code === '200') {   // 表示操作成功\r\n            this.$message.success('操作成功')\r\n            this.load()\r\n          } else {\r\n            this.$message.error(res.msg)  // 弹出错误的信息\r\n          }\r\n        })\r\n      }).catch(() => {\r\n      })\r\n    },\r\n    handleLike() {\r\n      this.$request.post(\"/likes/set\", {fid: this.activityId, module: \"竞赛\"}).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success(\"操作成功\")\r\n          this.load()\r\n        } else {\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n    handleCollect() {\r\n      this.$request.post(\"/collect/set/collect\", {fid: this.activityId, module: \"竞赛\"}).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success(\"操作成功\")\r\n          this.load()\r\n        } else {\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n    sign() {\r\n      this.$request.post(\"/activitySign/add\", {activityId: this.activityId}).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success(\"报名成功\")\r\n          this.load()\r\n        } else {\r\n          this.$message.error(res.msg)\r\n        }\r\n      })\r\n    },\r\n    load() {\r\n      this.$request.get('/activity/selectById/' + this.activityId).then(res => {\r\n        this.activity = res.data || {}\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n\r\n<style scoped>\r\n\r\n</style>"],"mappings":"AAqEA,OAAAA,OAAA;AAEA;EACAC,IAAA;EACAC,KAAA;IACA;MACAC,QAAA;MACAC,UAAA,OAAAC,MAAA,CAAAC,KAAA,CAAAF,UAAA;MACAG,QAAA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;IACA;EACA;EACAC,UAAA;IACAb;EACA;EACAc,QAAA;IACA,KAAAC,IAAA;IACA;IACA,KAAAC,QAAA,CAAAC,GAAA,iCAAAb,UAAA;EACA;EAEAc,OAAA;IACAC,OAAA;MAAA;MACA,KAAAC,QAAA;QAAAC,IAAA;MAAA,GAAAC,IAAA,CAAAC,QAAA;QACA,KAAAP,QAAA,CAAAQ,MAAA,qCAAApB,UAAA,cAAAI,IAAA,CAAAiB,EAAA,EAAAH,IAAA,CAAAI,GAAA;UACA,IAAAA,GAAA,CAAAC,IAAA;YAAA;YACA,KAAAC,QAAA,CAAAC,OAAA;YACA,KAAAd,IAAA;UACA;YACA,KAAAa,QAAA,CAAAE,KAAA,CAAAJ,GAAA,CAAAK,GAAA;UACA;QACA;MACA,GAAAC,KAAA,QACA;IACA;IACAC,WAAA;MACA,KAAAjB,QAAA,CAAAkB,IAAA;QAAAC,GAAA,OAAA/B,UAAA;QAAAgC,MAAA;MAAA,GAAAd,IAAA,CAAAI,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAC,QAAA,CAAAC,OAAA;UACA,KAAAd,IAAA;QACA;UACA,KAAAa,QAAA,CAAAE,KAAA,CAAAJ,GAAA,CAAAK,GAAA;QACA;MACA;IACA;IACAM,cAAA;MACA,KAAArB,QAAA,CAAAkB,IAAA;QAAAC,GAAA,OAAA/B,UAAA;QAAAgC,MAAA;MAAA,GAAAd,IAAA,CAAAI,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAC,QAAA,CAAAC,OAAA;UACA,KAAAd,IAAA;QACA;UACA,KAAAa,QAAA,CAAAE,KAAA,CAAAJ,GAAA,CAAAK,GAAA;QACA;MACA;IACA;IACAO,KAAA;MACA,KAAAtB,QAAA,CAAAkB,IAAA;QAAA9B,UAAA,OAAAA;MAAA,GAAAkB,IAAA,CAAAI,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAC,QAAA,CAAAC,OAAA;UACA,KAAAd,IAAA;QACA;UACA,KAAAa,QAAA,CAAAE,KAAA,CAAAJ,GAAA,CAAAK,GAAA;QACA;MACA;IACA;IACAhB,KAAA;MACA,KAAAC,QAAA,CAAAuB,GAAA,gCAAAnC,UAAA,EAAAkB,IAAA,CAAAI,GAAA;QACA,KAAAvB,QAAA,GAAAuB,GAAA,CAAAxB,IAAA;MACA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":